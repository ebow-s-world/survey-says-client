{{#each surveys as |survey|}}
  <section class="take-survey col-6">
    <h3 class="survey-title">{{survey.title}}</h3>
  <form class="survey-form" data-id="{{survey._id}}">
    {{#each survey.options as |option|}}
      <input data-id="{{option.id}}" name="response[answer]" type="radio" class="option-title" value="{{option.name}}">{{option.name}}</input>
      <br>
  {{/each}}
  <input type=submit class="survey-submit">
  <button class="results-button">Results</button>
</form>
<div id="results-{{survey._id}}" class="disable">
  <h3>Results</h3>
  <ul>
    {{#each survey.options as |option|}}
    <li data-option-id="{{option.id}}">
      <h6 class="option-results">
        {{option.name}}: {{option.count}}
      </h6>
    </li>
    {{/each}}
  </ul>
</div>
</section>
{{/each}}
