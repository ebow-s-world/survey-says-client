<form id="create-survey">
  <input type="text" name="survey[title]" maxlength="40" placeholder="Title" required><br>
  <div id='options'>
    <div id='option-0'>
      <input type="text" name="options[]" maxlength="40" placeholder="Option Name" required>
      <button type='button' data-optionid='0' class='btn btn-danger remove-option'>-</button><br>
    </div>
    <div id='option-1'>
      <input type="text" name="options[]" maxlength="40" placeholder="Option Name" required>
      <button type='button' data-optionid='1' class='btn btn-danger remove-option'>-</button><br>
    </div>
  </div>
  <button type=button id='add-option' class='btn btn-success'>+</button>
  <input type="submit" value="Create Survey" class="btn btn-success">
</form>
