<div class="create-survey">
<form id="create-survey">
  <input class="text-field" type="text" name="survey[title]" maxlength="60" placeholder="Title" required><br>
  <div id='options'>
    <div id='option-0'>
      <input class="text-field" type="text" name="options[]" maxlength="28" placeholder="Option Name" required>
      <button type='button' data-optionid='0' class='btn btn-danger remove-option'>-</button><br>
    </div>
    <div id='option-1'>
      <input class="text-field" type="text" name="options[]" maxlength="28" placeholder="Option Name" required>
      <button type='button' data-optionid='1' class='btn btn-danger remove-option'>-</button><br>
    </div>
  </div>
  <button type=button id='add-option' class='btn add-option'>+</button>
  <input type="submit" value="Create Survey" class="btn">
</form>
</div>
